/* pages/testSancode/testSancode.wxss */

page {
    background: rgb(236, 238, 243)
}

.content {
    width: 100%;
    height: 880rpx;
    text-align: center;
}

.img {
    width: 100%;
}

.img .nuo-tit {
    color: #373a3c;
    font-size: 40rpx;
    padding-top: 62rpx;
}

.nuo-grey {
    color: #878a8c;
    font-size: 36rpx;
    line-height: 128rpx;
}

.img .qrCodebj {
    margin-left: 125rpx;
    height: 500rpx;
    width: 500rpx;
    background-image: url(http://img.nuochewang.net/777.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.qrCodebj image {
    width: 280rpx;
    height: 280rpx;
    margin-top: 110rpx;
}

.text {
    width: 95%;
    margin-top: 40rpx;
}

.text-grey {
    color: #878a8c;
    font-size: 30rpx;
    font-weight: 400;
}

.text-grey .text-red {
    color: #f63828;
    display: inline;
}

.btm-btton {
    width: 96%;
    margin: 0 auto;
}

.btm-btton .apply {
    color: #fff;
    background: #3e63a2;
}

.btm-btton .del {
    color: #3e63a2;
    background: #fff;
    margin-top: 40rpx;
}

.customer {
    color: #aaadaf;
    font-size: 32rpx;
    text-align: center;
    height: 120rpx;
    line-height: 120rpx;
}

.button-view::after {
    border: none;
    outline: none;
}

button[size=mini] {
    color: #aaadaf;
    background: none;
    padding: 0;
}