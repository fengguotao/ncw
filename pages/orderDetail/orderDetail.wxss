/* pages/orderDetail/orderDetail.wxss */

page {
    width: 100%;
    height: 100%;
    background: #EEEEEE;
    padding: 20rpx 0;
    box-sizing: border-box
}

.order-detail {
    width: 100%;
    height: 496rpx;
    background: #FFFFFF;
    padding: 0 30rpx;
    box-sizing: border-box
}

.order-no {
    height: 96rpx;
    width: 100%;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #EEEEEE;
    font-size: 26rpx;
    color: #000000;
}

.san-code {
    height: 200rpx;
    width: 100%;
    border-bottom: 1rpx solid #EEEEEE;
    display: flex;
    align-items: center;
}

.q-code-icon {
    width: 180rpx;
    height: 180rpx;
    margin-right: 20rpx;
}

.q-code-detail {
    height: 180rpx;
    flex-grow: 1
}

.q-code-icon image {
    width: 180rpx;
    height: 180rpx;
}

.big-text {
    height: 80rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between
}

.text-title {
    color: #000000;
    font-size: 32rpx
}

.text-money {
    color: #666666;
    font-size: 26rpx
}

.samll-text {
    height: 50rpx;
    width: 100%;
    display: flex;
    align-items: center;
    color: #666666;
    font-size: 26rpx
}

.order-minute {
    height: 200rpx;
    width: 100%;
    display: flex;
    align-items: center;
}

.minute-item {
    height: 150rpx;
    width: 100%;
}

.item {
    height: 50rpx;
    width: 100%;
    display: flex;
    color: #666666;
    font-size: 26rpx
}

.user-detail {
    margin-top: 20rpx;
    width: 100%;
    height: 186rpx;
    background: #FFFFFF;
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center
}

.user-icon {
    height: 80rpx;
    width: 80rpx;
    margin-right: 20rpx;
}

.user-icon image {
    height: 80rpx;
    width: 80rpx;
}

.user-minute {
    height: 126rpx;
    flex-grow: 1;
}

.user-name {
    height: 76rpx;
    display: flex;
    align-items: center;
}

.user-name .name {
    color: #000000;
    font-size: 35rpx;
    margin-right: 30rpx
}

.user-name .phone {
    color: #666666;
    font-size: 26rpx;
}

.user-address {
    height: 50rpx;
    line-height: 50rpx;
    color: #333333;
    font-size: 26rpx
}

.express-detail {
    margin-top: 20rpx;
    width: 100%;
    height: 180rpx;
    background: #FFFFFF;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.express-no {
    height: 70rpx;
    line-height: 70rpx;
    width: 100%;
    color: #333333;
    font-size: 32rpx;
}

.express-service {
    height: 70rpx;
    line-height: 70rpx;
    width: 100%;
    color: #017ef3;
    font-size: 35rpx;
    display: flex;
    justify-content: flex-start;
}

.express-service text {
    color: #333333;
    font-size: 32rpx;
}

.express-service image {
    height: 34rpx;
    width: 32rpx
}

.logistics {
    width: 690rpx;
    margin-top: 20rpx;
    margin-left: 30rpx;
    min-height: 200rpx;
    border-radius: 15rpx;
    padding: 30rpx;
    box-sizing: border-box;
    background: #FFFFFF;
}

.flow-item {
    min-height: 100rpx;
    width: 100%;
    border-left: 1rpx solid #EEEEEE;
    position: relative;
    padding: 0 0 30rpx 20rpx;
    box-sizing: border-box
}

.index-false {
    width: 31rpx;
    height: 31rpx;
    position: absolute;
    top: 5rpx;
    left: -15rpx;
}

.index-true {
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    top: 15rpx;
    left: -8rpx;
}

.item-describe {
    color: #666666;
    font-size: 26rpx;
    line-height: 32rpx;
}

.item-time {
    color: #999999;
    font-size: 22rpx;
    line-height: 32rpx
}

.item-describe-index {
    color: #017ef3;
    font-size: 26rpx;
    line-height: 50rpx
}

.no-delivery {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 26rpx;
    color: #666666;
}