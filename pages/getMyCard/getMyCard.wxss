/* pages/getMyCard/getMyCard.wxss */

page {
    background: rgb(236, 238, 243)
}

.top {
    width: 100%;
    height: 350rpx;
    background-image: url(http://img.nuochewang.net/wximages/next_bg.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
    display: flex;
    justify-content: center;
    align-items: center
}

.conten {
    height: 200rpx;
    width: 100%;
    padding-left: 50rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center
}

.img {
    height: 200rpx;
    width: 200rpx;
    background: #FFFFFF;
    border-radius: 100rpx;
    text-align: center;
    padding-top: 20rpx;
    box-sizing: border-box
}

.sao {
    width: 200rpx;
    height: 30rpx;
    font-size: 24rpx;
    color: #3b5998
}

.img image {
    margin-top: 20rpx;
    width: 80rpx;
    height: 80rpx;
}

.text {
    color: #FFFFFF;
    margin-left: 30rpx
}

.big {
    font-size: 40rpx;
    font-weight: 600;
    height: 60rpx;
    line-height: 60rpx
}

.small {
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx
}

.buy-num {
    height: 96rpx;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    background: #FFFFFF;
    margin: 20rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.buy-num-right {
    width: 200rpx;
    height: 50rpx;
    border: #333333 solid 1rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.num-left,
.num-right {
    height: 50rpx;
    width: 30%;
    line-height: 50rpx;
    text-align: center;
}

.num-cont {
    width: 40%;
    height: 50rpx;
    border-left: #333333 solid 1rpx;
    border-right: #333333 solid 1rpx;
}

.num-cont input {
    height: 50rpx;
    line-height: 50rpx;
    width: 100%;
    text-align: center
}

.buy-input {
    height: 96rpx;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    background: #FFFFFF;
    border-bottom: rgb(236, 238, 243) solid 1rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.buy-input input {
    width: 500rpx;
    height: 96rpx;
}

.item-title {
    font-size: 35rpx;
    color: #333333
}

.btm {
    height: 240rpx;
    width: 100%;
    position: fixed;
    bottom: 0
}

.btm-text {
    font-size: 22rpx;
    padding: 0 30rpx;
    height: 70rpx;
}

.btm-btton {
    height: 100rpx;
    width: 100%;
    background: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: space-between
}

.btm-btton .left,
.btm-btton .right {
    height: 100rpx;
    line-height: 100rpx;
    flex-basis: 50%;
}

.btm-btton .left {
    padding: 0 30rpx;
}

.btm-btton .right {
    background: red;
    text-align: center;
    color: #FFFFFF
}