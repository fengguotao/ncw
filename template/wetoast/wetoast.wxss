.wetoast {
    display: none;
}

.wetoast_show {
    display: block;
}

.wetoast__mask {
    position: fixed;
    z-index: 10001;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
}

.wetoast__bd {
    opacity: 0;
    position: fixed;
    z-index: 5000;
    min-height: 100rpx;
    max-width: 70%;
    text-align: center;
    padding: 29rpx 40rpx;
    line-height: 43rpx;
    top: 50%;
    left: 50%;
    box-sizing: border-box;
    transform: translateX(-50%);
    background: rgba(40, 40, 40, 0.75);
    border-radius: 8rpx;
    color: #FFFFFF;
    word-wrap: break-word;
    word-break: break-all;
}

.wetoast__bd__title {
    font-size: 32rpx;
}

.wetoast__bd.bottom {
    top: auto;
    bottom: 80rpx;
    min-height: 20rpx;
}